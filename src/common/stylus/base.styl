@import "variable.styl";
body, html
  font-family: 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif, 'Droid Sans Fallback'
  user-select: none
  -webkit-tap-highlight-color: transparent
  background: $color-background
  color: $color-text

*
  box-sizing: border-box

img
  display inline-block
  max-width 100%

html,
body,
.app
  width 100%
  height 100%
  position relative
  background: #f5f5f5
  // overflow hidden
  color: #000

.clearfix:after
  content "020"
  display block
  height 0
  clear both
  visibility hidden

.clearfix 
  zoom 1

.cube-recycle-list-transition
  width 100%
.cube-popup
  max-width 400px
  margin 0 auto
.cube-input
    border 1px solid $input-color
    background rgba(0, 0, 0, 0.3)
    &.cube-input_active
      border 1px solid $input-coloractive
.cube-btn
  background-color #8c3eb3
.cube-input-field
  color #ffffff
.cube-switch .cube-switch-input:checked + .cube-switch-ui
  background-color $font-active
  border-color: $font-active;
.bscroll-indicator
  background #f4f2ea !important
.cube-toast .cube-popup-content
  background rgba(248, 249, 255, 0.9)
  color #000000
